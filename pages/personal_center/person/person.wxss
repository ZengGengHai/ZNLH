.click_image{
  display: inline-block;
  position:absolute;
  left:70%;
  width:50rpx;
  height: 50rpx;
  padding:35rpx;
  opacity: 0;
  animation:click 2s linear 2s infinite alternate;
  -moz-animation:click 2s linear 2s infinite alternate; /* Firefox */
  -webkit-animation:click 2s linear 2s infinite alternate; /* Safari and Chrome */
  -o-animation:click 2s linear 2s infinite alternate; /* Opera */
}


.about_text{
  margin:100rpx auto 40rpx;
  text-align: center;
  font-size: 25rpx;
  color:#921616;
  font-weight: bold;
}

@keyframes click
{
0%  {
  width:65rpx;
  height: 65rpx;
  padding:30rpx;
  opacity:0
  }
5%{
  opacity:1
}
50%  {
  width:50rpx;
  height: 50rpx;
  padding:35rpx;
  }
70%  {
  width:65rpx;
  height: 65rpx;
  padding:30rpx;
  }
100% {
  width:50rpx;
  height: 50rpx;
  padding:33rpx;
  }
}


.click_name{
  position: absolute;
  left:40vw;
  top:1.5vh;
  display: inline-block;
  width:20rpx;
  height: 20rpx;
  z-index:99999;
  opacity: 0;
  animation:name 2s linear 2s infinite alternate;
  -moz-animation:name 2s linear 2s infinite alternate; /* Firefox */
  -webkit-animation:name 2s linear 2s infinite alternate; /* Safari and Chrome */
  -o-animation:name 2s linear 2s infinite alternate; /* Opera */
  
}
@keyframes name
{
0%  {
  width:70rpx;
  height: 70rpx;
  padding:25rpx;
  opacity:0
  }
5%{
  opacity:1
}
50%  {
  width:50rpx;
  height: 50rpx;
  padding:35rpx;
  }
70%  {
  width:70rpx;
  height: 70rpx;
  padding:25rpx;
  }
100% {
  width:50rpx;
  height: 50rpx;
  padding:33rpx;
  }
}




















